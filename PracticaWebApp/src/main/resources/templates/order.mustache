<form action="../dispatchOrder/{{productOrder.id}}" method="POST">
<div class="form-group">
	<div class="container">
			
		<div class="row mt-3" >
			<div class="col-sm-12">
				<h1>View Order</h1>
			</div>
		</div>

				<div class="row p-3 mt-2 pt-2" >
					<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text  bg-dark text-white" id="basic-addon1">Order name</span>
					</div>
						<h3 class="m-1"> {{productOrder.name}}</h3>
						<input type="hidden" class="form-control" id="name" name="name"
							value="{{productOrder.name}}">
					</div>
				</div>
		<div class="table m-2 mt-3 p-1">

			<div class="row bg-dark text-white pt-2"  align="center">
				<div class="col-sm-1">
					<h5>Ok</h5>
				</div>
				<div class="col-sm-3">
					<h5>Name</h5>
				</div>
				<div class="col-sm-5" align="center">
					<h5>Description</h5>
				</div>
				<div class="col-sm-3" align="center">
					<h5>Price</h5>
				</div>
			</div>
			{{#productOrder}} {{#products}}
			<div class="row bg-light pt-2">
				<div class="col-sm-1">
					<span class="input-group-addon p-3"> 
						<input class="okCheck" type="checkbox" aria-label="...">
						<input class='dispatched' type='hidden' value='{{dispatched}}' name='dispatched'>
					</span>
				</div>
				<div class="col-sm-3">
					<p>{{name}}</p><input type="hidden" class="form-control" 
							name="ids" value="{{id}}">
				
				</div>
				<div class="col-sm-5">
					<p>{{description}}</p>
				</div>
				<div class="col-sm-3" align="right" style="padding-right: 4rem">
					<p>{{price}} &euro;</p>
				</div>
			</div>
			{{/products}} {{/productOrder}}
		</div>
		<div class="row p-3 mt-5" >
			<div class="btn-group" role="group">
				<a role="button" class="btn btn-dark" href="../../">Back to Orders</a>
				<a role="button" class="btn btn-dark" href="../../modify/{{productOrder.id}}">Go to modify order</a>
				<button type="submit" class="btn btn-dark">Update this order</button>
				<a role="button" class="btn btn-dark" href="#myModal" data-toggle="modal">Delete this order</a>
			</div>
		</div>
	</div>
	</div>
						<!-- Modal HTML -->
<div id="myModal" class="modal fade">
	<div class="modal-dialog modal-confirm">
		<div class="modal-content">
			<div class="modal-header">
				<div class="icon-box">
					<i class="material-icons">&#xE5CD;</i>
				</div>				
				<h4 class="modal-title">Are you sure?</h4>	
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-body">
				<p>Do you really want to delete this order? This process cannot be undone.</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
				<a role="button" class="btn btn-danger delete-btn" href="../../delete/{{productOrder.id}}">Delete</a>
			</div>
		</div>
	</div>
</div>
	</form>
